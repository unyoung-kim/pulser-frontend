    //         "position": "before"
    //       },
    //       {
    //         "pattern": "next",
    //         "group": "external",
    //         "position": "before"
    //       },
    //       {
    //         "pattern": "next/**",
    //         "group": "external",
    //         "position": "before"
    //       },
    //       {
    //         "pattern": "**/*.css",
    //         "group": "index",
    //         "position": "after"
    //       }
    //     ],
    //     "pathGroupsExcludedImportTypes": ["react", "react-dom", "next", "next/**"],
